---
import "../styles/global.css";
import brand from "../assets/images/brand.svg"
import { Image } from "astro:assets";
---

<nav class='bg-white border-gray-200'>
    <div
        class='max-w-screen-xl flex flex-wrap items-center justify-center sm:justify-between mx-auto p-4'
    >
        <a
            href='https://flowbite.com/'
            class='flex items-center space-x-3 rtl:space-x-reverse'
        >
            <Image src={brand} alt='Estetica Angels' class='h-12 w-full m-0' />
        </a>
        <div class='flex md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse'>
            <button
                type='button'
                class='text-secondary bg-dark hover:bg-primary hover:text-white focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 text-center'
                >AGENDAR CITA <i class="fa-regular fa-clock"></i></button
            >
            <button
                data-collapse-toggle='navbar-cta'
                type='button'
                class='inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-primary rounded-lg md:hidden hover:bg-secondary'
                aria-controls='navbar-cta'
                aria-expanded='false'
            >
                <span class='sr-only'>Open main menu</span>
                <svg
                    class='w-5 h-5'
                    aria-hidden='true'
                    xmlns='http://www.w3.org/2000/svg'
                    fill='none'
                    viewBox='0 0 17 14'
                >
                    <path
                        stroke='currentColor'
                        stroke-linecap='round'
                        stroke-linejoin='round'
                        stroke-width='2'
                        d='M1 1h15M1 7h15M1 13h15'></path>
                </svg>
            </button>
        </div>
        <div
            class='items-center justify-between hidden w-full md:flex md:w-auto md:order-1'
            id='navbar-cta'
        >
            <ul
                class='flex flex-col font-medium items-center p-4 md:p-0 mt-4 md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 md:bg-white'
            >
                <li>
                    <a
                        href='#'
                        class='block py-2 px-3 md:p-0 text-primary hover:bg-secondary sm:text-secondary sm:hover:bg-primary hover:rounded-2xl md:hover:bg-transparent md:hover:text-primary md:dark:hover:text-primary'
                        aria-current='page'>Inicio</a
                    >
                </li>
                <li>
                    <a
                        href='#'
                        class='block py-2 px-3 md:p-0 sm:text-greylight text-primary hover:bg-secondary hover:rounded-2xl md:hover:bg-transparent md:hover:text-primary md:dark:hover:text-primary'
                        >Nosotros</a
                    >
                </li>
                <li>
                    <a
                        href='#'
                        class='block py-2 px-3 md:p-0 sm:text-greylight text-primary hover:bg-secondary hover:rounded-2xl md:hover:bg-transparent md:hover:text-primary md:dark:hover:text-primary '
                        >Servicios</a
                    >
                </li>
                <li>
                    <a
                        href='#'
                        class='block py-2 px-3 md:p-0 sm:text-greylight text-primary hover:bg-secondary hover:rounded-2xl md:hover:bg-transparent md:hover:text-primary md:dark:hover:text-primary '
                        >Contacto</a
                    >
                </li>
            </ul>
        </div>
    </div>
</nav>
